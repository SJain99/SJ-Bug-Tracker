        <tr>
            <th>Project</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts 
{
    <script>
        $(document).ready(function () {
            $("#projects").DataTable({
                ajax: {
                    url: "/api/projects",
